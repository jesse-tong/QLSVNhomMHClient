<Window x:Class="QLSVNhom.LoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="TENDN:" />
            <TextBox x:Name="txtTENDN" Margin="0,0,0,10" />
            <TextBlock Text="MATKHAU:" />
            <PasswordBox x:Name="txtMATKHAU" Margin="0,0,0,10" />
            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Button Content="Đăng ký tài khoản nhân viên" Click="Register_Click" HorizontalAlignment="Left" Margin="0,0,0,0"/>
                <Button Content="Đăng nhập" Click="Login_Click" HorizontalAlignment="Right" />
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
